{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext", // <-- Set module to 'NodeNext'
    "moduleResolution": "NodeNext", // <-- Set moduleResolution to 'NodeNext'
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
